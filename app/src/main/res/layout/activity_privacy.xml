            android:textStyle="normal"
            android:justificationMode="inter_word"
            app:layout_constraintTop_toBottomOf="@+id/tvPrivacy_line14"
            tools:layout_editor_absoluteX="24dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>